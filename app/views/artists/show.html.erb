    <%= image_tag @artist.thumbnail %>
  </li>
  <% @artist.videos.sort {|a, b| b.created_at <=> a.created_at}.each do |video| %>
  <li class="box">
    <a href="<%= url_for video %>">
      <%= image_tag video.thumbnail %>
      <% if video.sub_on? %>
      <span class="count">ä¸­</span>
      <% end %>
      <h1><%= video.title %></h1>
    </a>
  </li>
  <% end %>
</ul>
